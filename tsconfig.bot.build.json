{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "outDir": "./bot-build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/bot/**/*"],
  "exclude": ["__tests__"]
}
